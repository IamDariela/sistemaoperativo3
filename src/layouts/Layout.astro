---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Link to Tailwind CSS -->
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
	</head>
	<body class="bg-cover bg-center" style="background-image: url('https://i.pinimg.com/originals/27/4d/ce/274dce24f60a45e28a6e3229f3100182.gif');">
		<div id="app" class="relative h-screen">
			<header class="[grid-area:taskbar] min-h-[50px] bg-white bg-opacity-80 backdrop-blur-md border-t border-gray-300 rounded-t-lg flex justify-center items-center space-x-4 px-4">
				<!-- App Icons -->
				<div class="flex space-x-4">
					<button class="focus:outline-none">
						<img src="https://cdn-icons-png.flaticon.com/256/668/668290.png" alt="Safari" class="w-6 h-6">
					</button>
					<!-- Botón de Documentos -->
					<button class="focus:outline-none flex items-center">
						<img src="https://cdn-icons-png.flaticon.com/256/10473/10473367.png" alt="Documentos" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Word -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/83/fe/22/83fe2289e31398d96e8e6ed9d603c72f.jpg" alt="Word" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Excel -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://cdn-icons-png.flaticon.com/256/732/732220.png" alt="Excel" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de PowerPoint -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://cdn-icons-png.flaticon.com/256/732/732218.png" alt="PowerPoint" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Fotos -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/2e/6c/3f/2e6c3f56d41d284b0c477ebdce6997df.jpg" alt="Fotos" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de App Store -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/f4/9d/f2/f49df2d08075efa44b18cb7dadcfe331.jpg" alt="App Store" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Configuración -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/52/e3/4c/52e34cdb514c7c65600eb18604a3903c.jpg" alt="Configuración" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Instagram -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/43/85/a5/4385a5479214954fa9fab6f1a778623f.jpg" alt="Configuración" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Camara -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/53/f0/a7/53f0a7e3c330f5abbdb7401ae3eda3db.jpg" alt="Configuración" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Gmail -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/a7/d2/a4/a7d2a4d8528e958bcdf8602042c1123d.jpg" alt="Configuración" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Botón de Pinterest -->
					  <button class="focus:outline-none flex items-center">
						<img src="https://i.pinimg.com/564x/ef/5c/95/ef5c95ad17a8a482b6dde826d81343f3.jpg" alt="Configuración" class="w-6 h-6 mr-2">
					  </button>
					  <!-- Otros iconos -->

				</div>
			</header>
			<main class="[grid-area:main] bg-red-00"></main>
			<slot />
		</div>
	</body>
</html>

<style>
	#app {
		display: grid;
		grid-template-areas:
			"main main main"
			"taskbar taskbar taskbar";
		grid-template-rows: 1fr auto;
	}
	body {
		font-family: system-ui, sans-serif;
		background-color: #000; /* Fallback background color */
	}
	header {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		padding: 0 1rem;
	}
</style>
